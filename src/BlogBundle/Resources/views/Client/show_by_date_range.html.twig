{% extends "BlogBundle:Client:show_by_date_range_form.html.twig" %}


{% block body %}
    {% block form_date_range %}
        {{ parent() }}
    {% endblock %}
    {% block no_records %}
        <h3>({{ clients | length }}) clients found.</h3>
    {% endblock %}
    <table>
        <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Created At</th>
            <th>Expires At</th>
        </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.firstName }}</td>
                <td>{{ client.lastName }}</td>
                <td>{{ client.createdAt | date('d/m/y') }}</td>
                <td>{{ client.expiresAt|date('d/m/y') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
